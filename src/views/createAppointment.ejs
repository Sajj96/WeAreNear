<%- include('./layouts/header') %>
    <div class="container content-wrapper">
        <section class="content-header">
            <div class="header-icon">
                <i class="fa fa-calendar"></i>
            </div>
            <div class="header-title">
                <h1>Appointment Form</h1>
                <small></small>
            </div>
        </section>
        <section class="content">
            <div class="row">
                <!-- Form controls -->
                <div class="col-sm-12">
                    <div class="panel panel-bd">
                        <% if (typeof success != 'undefined' && success) { %>
                            <div class="alert alert-success"><%= success %></div>
                            <% } else if(typeof error != 'undefined' && error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <div class="panel-body appointment-body">
                            <form action="/appointment/save" method="post" name="createappointment" id="createappointment">
                                <div class="form-row">
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6">
                                        <label for="firstname">First Name</label>
                                        <input type="text" name="firstname" id="firstname" class="form-control">
                                    </div>
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6">
                                        <label for="lastname">Last Name</label>
                                        <input id="lastname" name="lastname" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6">
                                        <label for="email">Email</label>
                                        <input type="email" id="email" name="email" class="form-control">
                                    </div>
                                    <div class="form-group pmd-textfield pmd-textfield-outline pmd-textfield-floating-label col-md-6">
                                        <label for="phone">Phone</label>
                                        <input type="number" id="phone" name="phone" class="form-control">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <fieldset class="form-group col-md-6">
                                        <div class="row pm-radio">
                                            <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                                            <div class="col-sm-10">
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" id="filledMale" value="Male" name="gender" class="custom-control-input">
                                                    <label class="custom-control-label pmd-radio-ripple-effect" for="filledMale">Male</label>
                                                </div>
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" id="filledFemale" value="Female" name="gender" class="custom-control-input">
                                                    <label class="custom-control-label pmd-radio-ripple-effect" for="filledFemale">Female</label>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="form-group col-md-6">
                                        <div class="form-row">
                                            <div class="col-md-4 form-group pmd-textfield pmd-textfield-floating-label">
                                                <label for="validationCustom03" class="is-invalid">Day of Birth</label>
                                                <select class="form-control" name="dbirth">
                                                    <option></option>
                                                    <option value="01">1</option>
                                                    <option value="02">2</option>
                                                    <option value="03">3</option>
                                                    <option value="04">4</option>
                                                    <option value="05">5</option>
                                                    <option value="06">6</option>
                                                    <option value="07">7</option>
                                                    <option value="08">8</option>
                                                    <option value="09">9</option>
                                                    <option value="10">10</option>
                                                    <option value="11">11</option>
                                                    <option value="12">12</option>
                                                    <option value="13">13</option>
                                                    <option value="14">14</option>
                                                    <option value="15">15</option>
                                                    <option value="16">16</option>
                                                    <option value="17">17</option>
                                                    <option value="18">18</option>
                                                    <option value="19">19</option>
                                                    <option value="20">20</option>
                                                    <option value="21">21</option>
                                                    <option value="22">22</option>
                                                    <option value="23">23</option>
                                                    <option value="24">24</option>
                                                    <option value="25">25</option>
                                                    <option value="26">26</option>
                                                    <option value="27">27</option>
                                                    <option value="28">28</option>
                                                    <option value="29">29</option>
                                                    <option value="30">30</option>
                                                    <option value="31">31</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4 form-group pmd-textfield pmd-textfield-floating-label">
                                                <label for="validationServer03">Month of Birth</label>
                                                <select class="form-control" id="validationServer03" name="mbirth">
                                                    <option></option>
                                                    <option value="01">January</option>
                                                    <option value="02">February</option>
                                                    <option value="03">March</option>
                                                    <option value="04">April</option>
                                                    <option value="05">May</option>
                                                    <option value="06">June</option>
                                                    <option value="07">July</option>
                                                    <option value="08">August</option>
                                                    <option value="09">September</option>
                                                    <option value="10">October</option>
                                                    <option value="11">November</option>
                                                    <option value="12">December</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4 form-group pmd-textfield pmd-textfield-floating-label">
                                                <label for="validationCustom05" class="is-invalid">Year of Birth</label>
                                                <input type="text" class="form-control" name="ybirth" id="validationCustom05">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6">
                                        <label class="control-label" for="datepicker-disabled-days">Appointment date and time:</label>
                                        <input type="text" name="appointment_date" id="datepicker-disabled-days" class="form-control">
                                    </div>
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6">
                                        <label for="propeller-select">Choose hospital</label>
                                        <select id="propeller-select" class="form-control" name="hospital">
                                            <option></option>
                                            <%for(var i=0; i< hosp.length; i++){ %>
                                                <option value="<%=hosp[i].hospital_name%>"><%=hosp[i].hospital_name%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6">
                                        <label for="insurance">Do you have any medical insurance?</label>
                                        <select id="insurance" class="form-control" name="insurance">
                                            <option></option>
                                            <option value="yes">Yes</option>
                                            <option value="no">No</option>
                                        </select>
                                    </div>
                                    <div class="form-group pmd-textfield pmd-textfield-floating-label col-md-6 insurance-provider" id="insurance-provider">
                                        <label for="provider">Choose insurance provider</label>
                                        <select id="provider" class="form-control" name="provider">
                                            <option></option>
                                            <option value="nhif">NHIF</option>
                                            <option value="nssf">NSSF</option>
                                            <option value="jubilee">JUBILEE</option>
                                        </select>
                                    </div>  
                                </div>
                                <div class="form-row">
                                    <div class="form-group pmd-textfield pmd-textfield-outline pmd-textfield-floating-label col-md-9">
                                        <label>Appointment Reason</label>
                                        <textarea class="form-control" name="reason"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="reset-button justify-content">
                                        <button type="reset" id="bouncyFlip"  class="btn pmd-ripple-effect btn-warning">Reset</button>
                                        <button type="submit" id="submit" name="submit" class="btn pmd-ripple-effect btn-success">Book Appointment</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
<%- include('./layouts/footer') %>
<script src="/js/appointment.js"></script>
<script src="/js/modernizr.custom.js"></script>
<script src="/js/classie.js"></script>
<script src="/js/notificationFx.js"></script>
<script src="/js/snap.svg-min.js"></script>
